# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=denshimon
DB_USER=postgres
DB_PASSWORD=your_password

# Server Configuration
PORT=8080
DEBUG=false

# Kubernetes Configuration
KUBECONFIG_PATH=/path/to/your/kubeconfig
K8S_NAMESPACE=default

# GitOps Configuration
GITOPS_BASE_REPO_URL=https://github.com/your-org/base_infrastructure.git
GITOPS_LOCAL_PATH=/tmp/base_infrastructure
GITOPS_BRANCH=main
GITOPS_USERNAME=your-git-username
GITOPS_TOKEN=your-git-token
GITOPS_AUTO_SYNC=true
GITOPS_SYNC_INTERVAL=300s

# Container Registry Configuration
DEFAULT_REGISTRY_TYPE=gitea
DEFAULT_REGISTRY_URL=https://your-gitea-instance.com
DEFAULT_REGISTRY_USERNAME=your-username
DEFAULT_REGISTRY_TOKEN=your-registry-token

# Monitoring Configuration
METRICS_ENABLED=true
LOG_LEVEL=info

# Backup Configuration
BACKUP_STORAGE_PATH=/var/backups/denshimon
BACKUP_RETENTION_DAYS=30